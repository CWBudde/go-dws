// Tests that field initializers work correctly

var GlobalConstant: Integer = 100;

type TMyClass = class
  field1: Integer = 42;
  field2: String = 'Hello';
  field3: Integer = GlobalConstant;
end;

var obj: TMyClass;
obj := TMyClass.Create();

PrintLn('Field1: ' + IntToStr(obj.field1));
PrintLn('Field2: ' + obj.field2);
PrintLn('Field3: ' + IntToStr(obj.field3));
PrintLn('Field initializers work!');
