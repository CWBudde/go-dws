// DWScript For Loop Demo
// This script demonstrates the for loop construct

PrintLn("=== For Loop Demo ===");
PrintLn("");

// Example 1: Simple ascending loop
PrintLn("Example 1: Count from 1 to 5");
for i := 1 to 5 do
  PrintLn(i);

PrintLn("");

// Example 2: Descending loop
PrintLn("Example 2: Countdown from 5 to 1");
for i := 5 downto 1 do
  PrintLn(i);

PrintLn("");

// Example 3: Sum calculation
PrintLn("Example 3: Sum of numbers 1 to 10");
var sum := 0;
for i := 1 to 10 do
  sum := sum + i;
PrintLn("Sum = ", sum);

PrintLn("");

// Example 4: Factorial calculation
PrintLn("Example 4: Factorial of 5");
var factorial := 1;
for i := 1 to 5 do
  factorial := factorial * i;
PrintLn("5! = ", factorial);

PrintLn("");

// Example 5: Nested loops - multiplication table
PrintLn("Example 5: Multiplication table (3x3)");
for i := 1 to 3 do
begin
  for j := 1 to 3 do
    Print(i * j, " ");
  PrintLn("")
end;

PrintLn("");

// Example 6: Loop with expressions for bounds
PrintLn("Example 6: Loop from 2+3 to 10-2");
for i := 2 + 3 to 10 - 2 do
  PrintLn(i);

PrintLn("");

// Example 7: Loop variable scoping
PrintLn("Example 7: Loop variable scoping");
var x := 100;
PrintLn("Before loop: x = ", x);
for x := 1 to 3 do
  PrintLn("Inside loop: x = ", x);
PrintLn("After loop: x = ", x);

PrintLn("");
PrintLn("=== Demo Complete ===");
