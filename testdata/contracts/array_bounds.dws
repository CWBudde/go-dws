// Test contracts with array parameters
function DotProduct(a, b: array of Float): Float;
require
	a.Length = b.Length : 'arrays must have same length';
	a.Length > 0 : 'arrays must not be empty';
var
	i: Integer;
begin
	Result := 0.0;
	for i := 0 to a.Length - 1 do
		Result := Result + a[i] * b[i];
end;
ensure
	Result >= 0.0 : 'dot product of non-negative vectors must be non-negative';

var
	arr1, arr2: array of Float;
begin
	arr1 := [1.0, 2.0, 3.0];
	arr2 := [4.0, 5.0, 6.0];
	PrintLn(DotProduct(arr1, arr2));  // Should print 32.0 (1*4 + 2*5 + 3*6)
end.
