// This test verifies that JSONValue can represent all JSON types
// and be properly boxed in Variants.

var v: Variant;

// Test null representation
v := ParseJSON('null');
PrintLn('null VarType: ', VarType(v));

// Test boolean representation
v := ParseJSON('true');
PrintLn('bool VarType: ', VarType(v));
PrintLn('bool value: ', v);

// Test number representation
v := ParseJSON('42');
PrintLn('number VarType: ', VarType(v));
PrintLn('number value: ', v);

// Test string representation
v := ParseJSON('"hello"');
PrintLn('string VarType: ', VarType(v));
PrintLn('string value: ', v);

// Test array representation
v := ParseJSON('[1, 2, 3]');
PrintLn('array VarType: ', VarType(v));
PrintLn('array value: ', v);

// Test object representation
v := ParseJSON('{"name": "John", "age": 30}');
PrintLn('object VarType: ', VarType(v));
PrintLn('object value: ', v);

PrintLn('JSON type representation tests complete');
