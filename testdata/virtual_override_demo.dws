// Virtual/Override Method Demonstration
// Task 7.64: Demonstrates polymorphic method dispatch

type TAnimal = class
  function MakeSound(): String; virtual;
  begin
    Result := 'Generic sound';
  end;
end;

type TDog = class(TAnimal)
  function MakeSound(): String; override;
  begin
    Result := 'Woof!';
  end;
end;

type TCat = class(TAnimal)
  function MakeSound(): String; override;
  begin
    Result := 'Meow!';
  end;
end;

var animal: TAnimal;

begin
  // Polymorphic dispatch: calling through base class variable
  // creates child instance, calls child's override method

  animal := TDog.Create();
  PrintLn('Dog says: ', animal.MakeSound());

  animal := TCat.Create();
  PrintLn('Cat says: ', animal.MakeSound());
end
